{
  "name": "musicfy",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "public/electron.js",
  "author": "Jose Rojas Rocha",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron\"",
    "electron-pack": "electron-builder",
    "preelectron-pack": "npm run build"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "axios": "^1.13.4",
    "clsx": "^2.1.1",
    "firebase": "^12.8.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-dropzone": "^14.4.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.13.0",
    "sass": "^1.97.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^18.19.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.1.0",
    "electron": "^28.3.0",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "globals": "^15.3.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.4.5",
    "typescript-eslint": "^7.9.0",
    "vite": "^5.2.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.joserojasrocha.musicfy",
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": null,
    "linux": null
  }
}
